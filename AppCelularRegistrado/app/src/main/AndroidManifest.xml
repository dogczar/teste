<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.celularegistrado.appcelularregistrado" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/titulo_principal"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.ResultadoActivity"
            android:label="@string/title_activity_resultado"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Activity.InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Activity.QRCodeInfoActivity"
            android:label="@string/title_activity_qrcode_info"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Activity.ImeiInfoActivity"
            android:label="@string/title_activity_imei_info"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Activity.TagInfoActivity"
            android:label="@string/title_activity_tag_info"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
